<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_white_page">

    		<TextView
		    android:id="@+id/HeaderTitle"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="0"
		    android:padding="10dp"
		    android:text="Medium Text"
		    android:background="#000000"
		    android:gravity="center" 
		    android:textSize="@dimen/header_bar_text_size"
        	android:textAppearance="@style/white_text_appearance"
        	style="@style/text_shadow"
		    android:layout_marginBottom="8dp"/>

    <ListView
        android:id="@+id/payDetailsLV"
        android:layout_width="match_parent"
        android:layout_height="0dip" 
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="4dp">
    </ListView>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#000000">
            <Button
        android:id="@+id/histpayVoidBut"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_button_selector"
        android:text="@string/button_void" 
        android:textColor="#FFFFFF"
        android:textAppearance="@style/white_text_appearance_unbold"
       	android:textSize="@dimen/large_button_text_size"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="25dp"/>

    <Button
        android:id="@+id/printButton"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_button_selector"
        android:text="@string/button_print"
        android:textColor="#FFFFFF"
        android:textAppearance="@style/white_text_appearance_unbold"
      	android:textSize="@dimen/large_button_text_size" 
        android:layout_marginLeft="25dp"/>
    </LinearLayout>




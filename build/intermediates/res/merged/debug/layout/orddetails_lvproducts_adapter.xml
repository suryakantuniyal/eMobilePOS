<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/prodIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ordProdTitle"
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            style="@style/text_shadow"
            android:textAppearance="@style/black_text_appearance"
            android:textSize="@dimen/listview_text_size" />

        <TextView
            android:id="@+id/ordProdSubtitle"
            style="@style/text_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textAppearance="@style/grey_text_appearance_unbold"
            android:textSize="@dimen/listview_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/ordProdQty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                style="@style/text_shadow"
                android:textAppearance="@style/red_text_appearance_bold"
                android:textSize="@dimen/listview_text_size" />

            <TextView
                android:id="@+id/ordProdPrice"
                
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                style="@style/text_shadow"
                android:textAppearance="@style/blue_text_appearance"
                android:textSize="@dimen/listview_text_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/AndroidSrc/GITRepo/Studio/eMobilePOSAndroid/src/main/res/layout/orddetails_lvproducts_adapter.xml -->
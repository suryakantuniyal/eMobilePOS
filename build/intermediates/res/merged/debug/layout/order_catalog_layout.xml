<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_page"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#454344"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp" >

        <Spinner
            android:id="@+id/filterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_btn_selector"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textAppearance="@style/white_text_appearance" />

        <com.android.support.MyEditText
            android:id="@+id/catalogSearchField"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:background="@drawable/text_field_selector"
            android:drawableLeft="@drawable/search_icon"
            android:ellipsize="start"
            android:enabled="true"
            android:imeOptions="actionSearch"
            android:inputType="textNoSuggestions"
            android:textAppearance="@style/black_text_appearance_unbold"
            android:textColor="#000000"
            android:textSize="@dimen/field_general_txt_size" >
        </com.android.support.MyEditText>

        <Button
            android:id="@+id/categoryButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/header_bar_button_height"
            android:background="@drawable/blue_btn_selector"
            android:text="Category"
            android:textAppearance="@style/white_text_appearance_unbold"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/ordering_checkout_btn_txt_size" />
    </LinearLayout>

    <ListView
        android:id="@+id/catalogListview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/listview_divider"
        android:dividerHeight="0.1dp"
        android:fastScrollEnabled="true"
        android:paddingTop="5dp"
        android:scrollingCache="false" >
    </ListView>

    <LinearLayout
        android:id="@+id/categoriesButtonLayoutHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#262526" >

        <Button
            android:id="@+id/buttonAllCategories"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/blue_btn_selector"
            android:text="All"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/ordering_checkout_btn_txt_size" />
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/AndroidSrc/GITRepo/Studio/eMobilePOSAndroid/src/main/res/layout/order_catalog_layout.xml -->
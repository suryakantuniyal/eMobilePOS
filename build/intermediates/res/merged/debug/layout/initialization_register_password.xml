<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_page"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/header_txt_padding"
            android:text="Register Password"
            android:textAppearance="@style/white_text_appearance"
            android:textSize="@dimen/header_txt_size" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Application Password" 
                android:textAppearance="@style/black_text_appearance"
                android:textSize="@dimen/field_section_text_size"
                android:layout_marginTop="20dp"/>

            <com.android.support.MyEditText
                android:id="@+id/regPassword1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Password"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPassword|textNoSuggestions"
                android:singleLine="true"
                android:textAppearance="@style/black_text_appearance_unbold"
                android:textColor="#000000"
                android:textSize="@dimen/field_text_size" />

            <com.android.support.MyEditText
                android:id="@+id/regPassword2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Re-enter Password"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPassword|textNoSuggestions"
                android:singleLine="true"
                android:textAppearance="@style/black_text_appearance_unbold"
                android:textColor="#000000"
                android:textSize="@dimen/field_text_size"/>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password must be at least 5 characters long"
                android:textAppearance="@style/black_text_appearance_unbold"
                android:textSize="@dimen/fineprint_text_size"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/setPasswordButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/blue_button_selector"
                android:ems="8"
                android:text="Set Password" 
                android:textAppearance="@style/white_text_appearance"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/large_button_text_size" />
        </LinearLayout>
    </ScrollView>

</LinearLayout><!-- From: file:/C:/AndroidSrc/GITRepo/Studio/eMobilePOSAndroid/src/main/res/layout/initialization_register_password.xml -->
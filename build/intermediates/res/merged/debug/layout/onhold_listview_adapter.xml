<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp">
    

        <TextView
        android:id="@+id/onHoldID"
        style="@style/text_shadow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="TextView"
        android:textAppearance="@style/black_text_appearance_unbold"
        android:textSize="@dimen/listview_text_size" />
        
        
        
    <TextView
        android:id="@+id/onHoldOfflineFlag"
        style="@style/text_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFFLINE"
        android:textAppearance="@style/red_text_appearance_bold"
        android:textSize="@dimen/listview_text_size" />



    <TextView
        android:id="@+id/onHoldName"
        style="@style/text_shadow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:text="TextView"
        android:textAppearance="@style/black_text_appearance_unbold"
        android:textSize="@dimen/listview_text_size" />


<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/data_item_text_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text=""
        android:textAppearance="@style/white_text_appearance_unbold"
        android:textSize="@dimen/grid_item_text_view_size" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/data_item_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/catalog_image_selector" >
        </ImageView>

        <ImageView
            android:id="@+id/data_item_image_icon"
            android:layout_width="@dimen/grip_item_status_icon_size"
            android:layout_height="@dimen/grip_item_status_icon_size"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" >
        </ImageView>
    </RelativeLayout>

    <TextView
        android:id="@+id/data_item_text_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text=""
        android:textAppearance="@style/white_text_appearance_unbold"
        android:textSize="@dimen/grid_item_text_view_size" />

</LinearLayout><!-- From: file:/C:/AndroidSrc/GITRepo/Studio/eMobilePOSAndroid/src/main/res/layout/addons_picker_listview_item.xml -->
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg_white_page">

     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000" >

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/header_txt_padding"
            android:text="@string/header_title_method"
            android:textAppearance="@style/white_text_appearance"
            android:textSize="@dimen/header_txt_size" />
    </RelativeLayout>



    <ListView
        android:id="@+id/cardsListview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:divider="@color/listview_divider"
        android:dividerHeight="0.1dp">
    </ListView>

</LinearLayout><!-- From: file:/C:/AndroidSrc/GITRepo/Studio/eMobilePOSAndroid/src/main/res/layout/card_list_layout.xml -->
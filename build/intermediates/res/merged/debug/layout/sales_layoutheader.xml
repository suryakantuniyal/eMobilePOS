<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#454344"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/subtotalTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sub Total:"
            android:textSize="16sp"
            android:textStyle="bold" />


            <EditText
                android:id="@+id/subtotalField"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/text_field_selector"
                android:ellipsize="start"
                android:ems="10"
                android:enabled="false"
                android:gravity="right|center_vertical"
                android:inputType="textNoSuggestions"
                android:text="$0.00"
                android:textColor="#000000"
                android:textSize="16sp" >
            </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/globalDiscountSpinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/blue_button_selector" />


            <EditText
                android:id="@+id/globalDiscountField"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/text_field_selector"
                android:ellipsize="start"
                android:ems="10"
                android:enabled="false"
                android:gravity="right|center_vertical"
                android:hint="@string/add_main_hint2"
                android:inputType="textNoSuggestions"
                android:textColor="#000000"
                android:textSize="16sp" >
            </EditText>
       
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/globalTaxSpinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/blue_button_selector" />

            <EditText
                android:id="@+id/globalTaxField"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/text_field_selector"
                android:ellipsize="start"
                android:ems="10"
                android:enabled="false"
                android:gravity="right|center_vertical"
                android:hint="@string/add_main_hint2"
                android:inputType="textNoSuggestions"
                android:textColor="#000000"
                android:textSize="16sp" >
            </EditText>
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/AndroidSrc/GITRepo/Studio/eMobilePOSAndroid/src/main/res/layout/sales_layoutheader.xml -->
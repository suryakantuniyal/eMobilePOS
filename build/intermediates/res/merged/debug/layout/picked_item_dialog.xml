<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dlog"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textAppearance="@style/dark_blue_text_appearance"
                android:textSize="@dimen/dlog_title_size" />

            <Button
                android:id="@+id/modifyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_btn_selector"
                android:ems="11"
                android:text="@string/picked_dlog_modify"
                android:textAppearance="@style/black_text_appearance_unbold"
                android:textColor="#000000"
                android:textSize="@dimen/dlog_btn_size" />

            <Button
                android:id="@+id/removeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_btn_selector"
                android:ems="11"
                android:text="@string/picked_dlog_remove"
                android:textAppearance="@style/black_text_appearance_unbold"
                android:textColor="#000000"
                android:textSize="@dimen/dlog_btn_size" />

            <Button
                android:id="@+id/viewVariationsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_btn_selector"
                android:ems="11"
                android:text="@string/picked_dlog_view_variations"
                android:textAppearance="@style/black_text_appearance_unbold"
                android:textColor="#000000"
                android:textSize="@dimen/dlog_btn_size" />
            
                      <Button
                android:id="@+id/btnPayWithLoyalty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_btn_selector"
                android:ems="11"
                android:text="@string/btn_pay_with_loyalty"
                android:textAppearance="@style/black_text_appearance_unbold"
                android:textColor="#000000"
                android:textSize="@dimen/dlog_btn_size" />

            <Button
                android:id="@+id/overridePriceButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_btn_selector"
                android:ems="11"
                android:text="@string/picked_dlog_override_price"
                android:textAppearance="@style/black_text_appearance_unbold"
                android:textColor="#000000"
                android:textSize="@dimen/dlog_btn_size" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_btn_selector"
                android:ems="11"
                android:text="@string/picked_dlog_cancel"
                android:textAppearance="@style/black_text_appearance_unbold"
                android:textColor="#000000"
                android:textSize="@dimen/dlog_btn_size" />
        </LinearLayout>
    </LinearLayout>

</ScrollView><!-- From: file:/C:/AndroidSrc/GITRepo/Studio/eMobilePOSAndroid/src/main/res/layout/picked_item_dialog.xml -->
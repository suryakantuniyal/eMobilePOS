<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_page">

    <com.android.support.MyEditText
        android:id="@+id/clockPasswordField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/text_field_selector"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textAppearance="@style/black_text_appearance_unbold"
        android:textSize="@dimen/field_text_size" 
        android:hint="@string/hint_enter_pwd">
    </com.android.support.MyEditText>

    <Button
        android:id="@+id/clockSubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_submit" 
        android:layout_marginTop="10dp"
        android:ems="5"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/clockPasswordField"
        android:textColor="#FFFFFF"
        android:background="@drawable/blue_button_selector"
		android:textAppearance="@style/white_text_appearance_unbold"
        android:textSize="@dimen/large_button_text_size"/>

</RelativeLayout>

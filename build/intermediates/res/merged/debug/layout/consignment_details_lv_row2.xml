<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/consign_details_prod_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World"
        android:textAppearance="@style/black_text_appearance"
        android:textSize="@dimen/listview_text_size"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Orig."
            android:textSize="@dimen/listview_text_size"
            android:textAppearance="@style/black_text_appearance" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Rack"
            android:textSize="@dimen/listview_text_size"
            android:textAppearance="@style/black_text_appearance" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Returns"
            android:textSize="@dimen/listview_text_size"
            android:textAppearance="@style/black_text_appearance" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Sold"
            android:textSize="@dimen/listview_text_size"
            android:textAppearance="@style/black_text_appearance" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Disp."
            android:textSize="@dimen/listview_text_size"
            android:textAppearance="@style/black_text_appearance" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/consign_details_orig_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="@dimen/listview_text_size"
            android:textAppearance="@style/black_text_appearance_unbold" />

        <TextView
            android:id="@+id/consign_details_rack_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="@dimen/listview_text_size"
            android:textAppearance="@style/black_text_appearance_unbold" />

        <TextView
            android:id="@+id/consign_details_return_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="@dimen/listview_text_size"
            android:textAppearance="@style/black_text_appearance_unbold" />

        <TextView
            android:id="@+id/consign_details_sold_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="@dimen/listview_text_size"
            android:textAppearance="@style/black_text_appearance_unbold" />

        <TextView
            android:id="@+id/consign_details_dispatch_qty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textSize="@dimen/listview_text_size"
            android:textAppearance="@style/black_text_appearance_unbold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/consign_details_prod_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/emobile_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="New Qty"
                    android:textSize="@dimen/listview_text_size"
                    android:textAppearance="@style/black_text_appearance" />

                <TextView
                    android:id="@+id/consign_details_new_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/listview_text_size"
                    android:textAppearance="@style/black_text_appearance_unbold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Product Price:"
                    android:textSize="@dimen/listview_text_size"
                    android:textAppearance="@style/black_text_appearance" />

                <TextView
                    android:id="@+id/consign_details_prod_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/listview_text_size"
                    android:textAppearance="@style/black_text_appearance_unbold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subtotal"
                    android:textSize="@dimen/listview_text_size"
                    android:textAppearance="@style/black_text_appearance" />

                <TextView
                    android:id="@+id/consign_details_subtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/listview_text_size"
                    android:textAppearance="@style/black_text_appearance_unbold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Credit Memo"
                    android:textSize="@dimen/listview_text_size"
                    android:textAppearance="@style/black_text_appearance" />

                <TextView
                    android:id="@+id/consign_details_credit_memo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/listview_text_size"
                    android:textAppearance="@style/black_text_appearance_unbold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total:"
                    android:textSize="@dimen/listview_text_size"
                    android:textAppearance="@style/black_text_appearance" />

                <TextView
                    android:id="@+id/consign_details_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/listview_text_size"
                    android:textAppearance="@style/black_text_appearance_unbold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


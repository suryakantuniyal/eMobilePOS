                android:textSize="@dimen/add_orders_loyalty_label_txt_size" />

            <EditText
                android:id="@+id/fieldPointsSubTotal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/text_field_selector"
                android:ellipsize="start"
                android:ems="10"
                android:enabled="false"
                android:gravity="right|center_vertical"
                android:inputType="textNoSuggestions"
                android:text="0"
                android:textAppearance="@style/black_text_appearance_unbold"
                android:textColor="#000000"
                android:textSize="@dimen/add_orders_loyalty_field_txt_size" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/label3"
                style="@style/text_shadow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/loyalty_points_in_use"
                android:textAppearance="@style/white_text_appearance"
                android:textSize="@dimen/add_orders_loyalty_label_txt_size" />

            <EditText
                android:id="@+id/fieldPointsInUse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/text_field_selector"
                android:ellipsize="start"
                android:ems="10"
                android:enabled="false"
                android:gravity="right|center_vertical"
                android:inputType="textNoSuggestions"
                android:text="0"
                android:textAppearance="@style/black_text_appearance_unbold"
                android:textColor="#000000"
                android:textSize="@dimen/add_orders_loyalty_field_txt_size" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/label4"
                style="@style/text_shadow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/loyalty_points_available"
                android:textAppearance="@style/white_text_appearance"
                android:textSize="@dimen/add_orders_loyalty_label_txt_size" />

            <EditText
                android:id="@+id/fieldPointsAvailable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

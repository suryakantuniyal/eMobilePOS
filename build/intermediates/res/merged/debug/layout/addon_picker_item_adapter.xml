<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="2dp"
    android:orientation="vertical" >
    
    
    
    <RelativeLayout
        android:layout_width="@dimen/catalog_image_size"
        android:layout_height="@dimen/catalog_image_size">

        <ImageView
            android:id="@+id/data_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/catalog_image_selector" >
        </ImageView>

        <ImageView
            android:id="@+id/data_item_image_icon"
            android:layout_width="@dimen/grip_item_status_icon_size"
            android:layout_height="@dimen/grip_item_status_icon_size"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY" >
        </ImageView>
    </RelativeLayout>
    
    <TextView
        android:id="@+id/data_item_text_top"
        android:layout_width="@dimen/catalog_image_size"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/gridview_title_bar"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="false"
        android:text=""
    	android:textAppearance="@style/white_text_appearance_unbold"
        android:textSize="@dimen/grid_item_text_view_size" />

    <TextView
        android:id="@+id/data_item_text_bottom"
        android:layout_width="@dimen/catalog_image_size"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/gridview_title_bar"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="false"
        android:text=""
    	android:textAppearance="@style/white_text_appearance_unbold"
        android:textSize="@dimen/grid_item_text_view_size" />
    
     <ImageView
        android:id="@+id/phImage"
        android:layout_width="@dimen/catalog_image_size"
        android:layout_height="@dimen/catalog_image_size"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ph_images" />

</FrameLayout><!-- From: file:/C:/AndroidSrc/GITRepo/Studio/eMobilePOSAndroid/src/main/res/layout/addon_picker_item_adapter.xml -->
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/catalog_landscape_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <GridView
        android:id="@+id/catalogGridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:fastScrollEnabled="true"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:scrollingCache="false"
        android:stretchMode="columnWidth" 
        android:layout_above="@+id/categoriesButtonLayoutHolder">
    </GridView>

    <LinearLayout
        android:id="@+id/categoriesButtonLayoutHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#262526">

        <Button
            android:id="@+id/buttonAllCategories"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="All"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</RelativeLayout>
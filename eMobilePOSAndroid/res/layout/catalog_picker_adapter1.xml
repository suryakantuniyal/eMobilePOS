<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="@dimen/picker_lmargin"
    android:paddingRight="@dimen/picker_rmargin"
    android:paddingTop="5dp" >

    <TextView
        android:id="@+id/itemNameLabel"
        style="@style/text_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="@style/black_text_appearance"
        android:textSize="@dimen/listview_text_size" />

    <TextView
        android:id="@+id/itemName"
        style="@style/text_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="@style/grey_text_appearance_unbold"
        android:textSize="@dimen/listview_text_size" />

</LinearLayout>
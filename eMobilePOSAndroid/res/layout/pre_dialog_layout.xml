<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dlog"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dlog_title_choose_action"
            android:textAppearance="@style/dark_blue_text_appearance"
            android:textSize="@dimen/dlog_title_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="20dp" >

            <Button
                android:id="@+id/withCustBut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="@drawable/white_btn_selector"
                android:text="@string/with_customer" 
                android:textAppearance="@style/black_text_appearance_unbold"
                android:textColor="#000000"
                android:textSize="@dimen/dlog_btn_size" />

            <Button
                android:id="@+id/withOutCustBut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="@drawable/white_btn_selector"
                android:text="@string/without_customer" 
                android:textAppearance="@style/black_text_appearance_unbold"
                android:textColor="#000000"
                android:textSize="@dimen/dlog_btn_size" />

            <Button
                android:id="@+id/cancelPredialogBut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_btn_selector"
                android:text="@string/button_cancel" 
                android:textAppearance="@style/black_text_appearance_unbold"
                android:ems="10"
                android:textColor="#000000"
                android:textSize="@dimen/dlog_btn_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
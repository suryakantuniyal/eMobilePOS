<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/blue_btn_selector"
    android:layout_height="wrap_content">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blue_gradient_header_horizontal"
            android:padding="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/table_number"
                android:id="@+id/textView10"
                android:textAppearance="@style/tiles_text_appearance"
                android:textSize="@dimen/about_main_text_size"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/seatNumber"
                android:id="@+id/textView12"
                android:textAppearance="@style/tiles_text_appearance"
                android:textSize="@dimen/about_main_text_size"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/splited_order_total_items"
                android:layout_gravity="center"

                android:textAppearance="@style/tiles_text_appearance"
                android:textSize="@dimen/about_main_text_size"
                android:id="@+id/textView18"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/splited_order_price"
                android:layout_gravity="center"

                android:textAppearance="@style/tiles_text_appearance"
                android:textSize="@dimen/about_main_text_size"
                android:id="@+id/textView20"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="11"
                android:id="@+id/splited_order_tablenumber_itemtextView"
                android:textAppearance="@style/tiles_text_appearance"
                android:textSize="@dimen/about_main_text_size"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/splited_order_seatnumber_itemtextView"
                android:textAppearance="@style/tiles_text_appearance"
                android:textSize="@dimen/about_main_text_size"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:textAppearance="@style/tiles_text_appearance"
                android:textSize="@dimen/about_main_text_size"
                android:id="@+id/splited_order_itemsstextView"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="$23.95"
                android:textAppearance="@style/tiles_text_appearance"
                android:textSize="@dimen/about_main_text_size"
                android:id="@+id/splited_order_price_itemtextView"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />
        </TableRow>

    </TableLayout>

    <TextView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/black_text_appearance_unbold"
        android:textSize="@dimen/about_main_text_size"
        android:text="Mozzarella Sticks, Hotwings"
        android:id="@+id/splited_order_productsTextView"
        android:layout_span="1"
        android:padding="5dp" />

    <Button
        style="@style/action_button_text_appearance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/action_button_selector"
        android:text="@string/pay_button"
        android:id="@+id/splited_order_pay_button"
        android:layout_margin="5dp" />
</LinearLayout>
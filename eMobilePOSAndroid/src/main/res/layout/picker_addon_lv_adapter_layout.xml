<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="2dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/gridViewImage"
        android:layout_width="@dimen/catalog_image_size"
        android:layout_height="@dimen/catalog_image_size"
        android:adjustViewBounds="true"
        
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/catalog_image_selector" />

    <TextView
        android:id="@+id/gridViewImageTitle"
        android:layout_width="@dimen/catalog_image_size"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/gridview_title_bar"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="false"
        android:text=""
    	android:textAppearance="@style/black_text_appearance_unbold"
        android:textSize="@dimen/grid_item_text_view_size" />
    
     <ImageView
        android:id="@+id/phImage"
        android:layout_width="@dimen/catalog_image_size"
        android:layout_height="@dimen/catalog_image_size"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ph_images" />

</FrameLayout>
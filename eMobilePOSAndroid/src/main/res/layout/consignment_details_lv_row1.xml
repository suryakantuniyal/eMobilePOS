<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/consign_details_id"
            android:textAppearance="@style/black_text_appearance_unbold"
            android:textSize="@dimen/listview_text_size" />

        <TextView
            android:id="@+id/consID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAppearance="@style/blue_text_appearance_unbold"
            android:textSize="@dimen/listview_text_size" />
    </LinearLayout>
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/consign_details_total_sold"
            android:textAppearance="@style/black_text_appearance_unbold"
            android:textSize="@dimen/listview_text_size" />

        <TextView
            android:id="@+id/consTotalSold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAppearance="@style/blue_text_appearance_unbold"
            android:textSize="@dimen/listview_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/consign_details_total_returned"
            android:textAppearance="@style/black_text_appearance_unbold"
            android:textSize="@dimen/listview_text_size" />

        <TextView
            android:id="@+id/consTotalReturned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAppearance="@style/blue_text_appearance_unbold"
            android:textSize="@dimen/listview_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/consign_details_total_dispatched"
            android:textAppearance="@style/black_text_appearance_unbold"
            android:textSize="@dimen/listview_text_size" />

        <TextView
            android:id="@+id/consTotalDispatched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAppearance="@style/blue_text_appearance_unbold"
            android:textSize="@dimen/listview_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/consign_details_total_items"
            android:textAppearance="@style/black_text_appearance_unbold"
            android:textSize="@dimen/listview_text_size" />

        <TextView
            android:id="@+id/consTotalItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAppearance="@style/blue_text_appearance_unbold"
            android:textSize="@dimen/listview_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/consign_details_grand_total"
            android:textAppearance="@style/black_text_appearance_unbold"
            android:textSize="@dimen/listview_text_size" />

        <TextView
            android:id="@+id/consGrandTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAppearance="@style/blue_text_appearance_unbold"
            android:textSize="@dimen/listview_text_size" />
    </LinearLayout>

</LinearLayout>
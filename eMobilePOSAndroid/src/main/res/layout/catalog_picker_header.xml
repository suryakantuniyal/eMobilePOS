<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/picker_lmargin"
    android:paddingRight="@dimen/picker_rmargin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/itemHeaderImg"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/emobile_icon" />

            <Button
                android:id="@+id/pickerHeaderButton"
                style="@style/black_text_appearance"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="3"
                android:background="@drawable/action_button_selector"
                android:paddingBottom="30dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="30dp"
                android:text="@string/cat_picker_add_but"
                android:textSize="@dimen/sales_tab_lv_text_size" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row1"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                style="@style/text_shadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="ID:"
                android:textAppearance="@style/black_text_appearance_unbold"
                android:textSize="@dimen/listview_text_size" />

            <TextView
                android:id="@+id/pickerHeaderID"
                style="@style/text_shadow"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:singleLine="false"
                android:text="TextView"
                android:textAppearance="@style/blue_text_appearance_unbold"
                android:textSize="@dimen/listview_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row3"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/textView4"
                style="@style/text_shadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="@string/cat_picker_onhand"
                android:textAppearance="@style/black_text_appearance_unbold"
                android:textSize="@dimen/listview_text_size" />


            <TextView
                android:id="@+id/pickerHeaderQty"
                style="@style/text_shadow"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="TextView"
                android:textAppearance="@style/blue_text_appearance_unbold"
                android:textSize="@dimen/listview_text_size" />


        </LinearLayout>

        <TextView
            android:id="@+id/attributesLabel"
            style="@style/text_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row4"
            android:text="@string/cat_picker_attributes"
            android:textAppearance="@style/black_text_appearance"
            android:textSize="@dimen/listview_text_size" />


        <LinearLayout
            android:id="@+id/catalog_picker_attributes_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/attributesLabel"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:paddingBottom="15dp">

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <Button
            android:id="@+id/btnReportDaySummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/blue_btn_selector"
            android:padding="25dp"
            android:text="@string/report_but_title"
            android:textAppearance="@style/black_text_appearance"
            android:textSize="@dimen/sales_tab_lv_text_size" />

        <Button
            android:id="@+id/btnReportPerShift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_btn_selector"
            android:padding="25dp"
            android:text="@string/report_per_shift"
            android:textAppearance="@style/black_text_appearance"
            android:textSize="@dimen/sales_tab_lv_text_size" />

        <Button
            android:id="@+id/btnEndOfDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_btn_selector"
            android:padding="25dp"
            android:text="@string/endofdayBtn"
            android:textAppearance="@style/black_text_appearance"
            android:textSize="@dimen/sales_tab_lv_text_size" />

    </LinearLayout>
</ScrollView>
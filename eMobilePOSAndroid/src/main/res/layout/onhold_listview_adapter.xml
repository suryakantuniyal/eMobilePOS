<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/onHoldName"
            style="@style/text_shadow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="3"
            android:paddingStart="5dp"
            android:gravity="start"
            android:textAppearance="@style/black_text_appearance_unbold"
            android:textSize="@dimen/listview_text_size"
            android:textStyle="bold|italic"
            tools:text="Table #1" />

        <TextView
            android:id="@+id/onHoldOfflineFlag"
            style="@style/text_shadow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/hold_offline"
            android:textAppearance="@style/red_text_appearance_bold"
            android:textSize="@dimen/listview_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <TextView
            android:id="@+id/onHoldID"
            style="@style/text_shadow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="2"
            android:textAppearance="@style/black_text_appearance_unbold"
            android:textSize="@dimen/listview_text_size"
            tools:text="999-999999-9999" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/guestNumbertextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_group_black_18dp"
                android:drawableLeft="@drawable/ic_group_black_18dp"
                android:drawablePadding="3dp"
                android:minWidth="60dp"
                android:textSize="@dimen/listview_text_size"
                tools:text="99" />

            <TextView
                android:id="@+id/timeOnSitetextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_access_time_black_18dp"
                android:drawableLeft="@drawable/ic_access_time_black_18dp"
                android:drawablePadding="3dp"
                android:minWidth="60dp"
                android:textSize="@dimen/listview_text_size"
                tools:text="99:99" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/orderTotaltextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minWidth="60dp"
                android:textSize="@dimen/listview_text_size"
                tools:text="$99.99" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/restaurantTabletextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_local_dining_black_18dp"
                    android:drawableLeft="@drawable/ic_local_dining_black_18dp"
                    android:drawablePadding="3dp"
                    android:minWidth="60dp"
                    android:textSize="@dimen/listview_text_size"
                    tools:text="#99" />

            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dlog"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/message1textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/void_confirmation_message1"
            android:textAppearance="@style/black_text_appearance_unbold"
            android:textSize="@dimen/dlog_msg_size" />

        <TextView
            android:id="@+id/message2textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/void_confirmation_message2"
            android:textAppearance="@style/black_text_appearance_unbold"
            android:textSize="@dimen/dlog_msg_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/voidBut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/red_btn_selector"
                android:text="@string/yes_void"
                android:ems="8"
                android:textAppearance="@style/black_text_appearance"
                android:textColor="#000000"
                android:textSize="@dimen/dlog_btn_size" />

            <Button
                android:id="@+id/notVoidBut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_btn_selector"
                android:text="@string/button_no"
                android:ems="8"
                android:textAppearance="@style/black_text_appearance"
                android:textColor="#000000"
                android:textSize="@dimen/dlog_btn_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
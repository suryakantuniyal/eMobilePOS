<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="5dp"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/prodDetailsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_shadow"
            android:textAppearance="@style/black_text_appearance_unbold"
            android:textSize="@dimen/listview_text_size"
            android:text="Title" />

        <TextView
            android:id="@+id/prodDetailsSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            style="@style/text_shadow"
        android:textAppearance="@style/grey_text_appearance_unbold"
            android:textSize="@dimen/listview_text_size"
            android:text="sub-title" />
    </LinearLayout>

    <ImageView
        android:id="@+id/prodMoreDetailsIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:src="@drawable/add_blue" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/subtotalTitle"
                style="@style/text_shadow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sub Total:"
                android:textAppearance="@style/white_text_appearance"
                android:textSize="@dimen/add_orders_total_label_txt_size" />

            <EditText
                android:id="@+id/subtotalField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/txt_field_default"
                android:ellipsize="start"
                android:ems="10"
                android:enabled="false"
                android:gravity="right|center_vertical"
                android:inputType="textNoSuggestions"
                android:text="$0.00"
                android:textAppearance="@style/black_text_appearance_unbold"
                android:textColor="#000000"
                android:textSize="@dimen/add_orders_total_field_text_size" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" >

                <Spinner
                    android:id="@+id/globalDiscountSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:background="@drawable/blue_btn_selector" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/discountBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:background="@drawable/blue_btn_selector"
                    />
                <EditText
                    android:id="@+id/globalDiscountField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/txt_field_default"
                    android:ellipsize="start"
                    android:ems="10"
                    android:enabled="false"
                    android:gravity="right|center_vertical"
                    android:hint="@string/add_main_hint2"
                    android:inputType="textNoSuggestions"
                    android:textAppearance="@style/black_text_appearance_unbold"
                    android:textColor="#000000"
                    android:textSize="@dimen/add_orders_total_field_text_size" >
                </EditText>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" >

                <Spinner
                    android:id="@+id/globalTaxSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_btn_selector" />
            </LinearLayout>

            <EditText
                android:id="@+id/globalTaxField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/txt_field_default"
                android:ellipsize="start"
                android:ems="10"
                android:enabled="false"
                android:gravity="right|center_vertical"
                android:hint="@string/add_main_hint2"
                android:inputType="textNoSuggestions"
                android:textAppearance="@style/black_text_appearance_unbold"
                android:textColor="#000000"
                android:textSize="@dimen/add_orders_total_field_text_size" >
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/grandTotalTitle"
                style="@style/text_shadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/button_grand_total"
                android:textAppearance="@style/grey_text_appearance_bold"
                android:textSize="@dimen/add_orders_total_grandtotal_txt_size" />

            <TextView
                android:id="@+id/grandTotalValue"
                style="@style/text_shadow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textAppearance="@style/grey_text_appearance_bold"
                android:textSize="@dimen/add_orders_total_grandtotal_txt_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#6D6D6E" />
      <stroke
          android:width="1dp"
          android:color="#9C9C9C" />
      <corners
          android:radius="4dp" /> <!-- set to 0 or erase it for sharp corners -->
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
    
    <item>
    <shape>
        <solid
          android:color="#D4D4D4" />
      
      <stroke
          android:width="1dp"
          android:color="#9C9C9C" />
      <corners
          android:radius="4dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>

</selector>

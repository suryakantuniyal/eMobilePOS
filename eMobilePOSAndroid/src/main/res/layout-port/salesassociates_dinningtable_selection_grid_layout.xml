<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dlogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_gradient_header_horizontal"
        android:ems="15"
        android:gravity="center"
        android:text="@string/select_table_number"
        android:textAppearance="@style/white_text_appearance"
        android:textSize="@dimen/header_bar_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/salesAssociateNametextView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/black_text_appearance"
            android:textSize="@dimen/text_default"
            tools:text="Jon Doe" />
    </LinearLayout>

    <GridView
        android:id="@+id/tablesGridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="150dp"
        android:gravity="center"
        android:horizontalSpacing="5dp"
        android:numColumns="auto_fit"
        android:padding="5dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp"
        tools:listitem="@layout/dinning_table_map_item" />
</LinearLayout>
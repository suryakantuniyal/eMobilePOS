<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/salesIcon"
        android:layout_width="@dimen/sales_tab_icon_size"
        android:layout_height="@dimen/sales_tab_icon_size"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:src="@drawable/ic_launcher"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/salesText"
        style="@style/text_shadow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="false"
        android:text="Hello world"
        android:textSize="@dimen/sales_tab_lv_text_size"
        android:textAppearance="@style/white_text_appearance" />

</LinearLayout>